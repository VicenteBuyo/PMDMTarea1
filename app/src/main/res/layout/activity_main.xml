<?xml version="1.0" encoding="utf-8"?>
<!-- Contenedor principal de la aplicación -->


<!-- Contenedor ppal, constraint layout -->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Lógica de navegación: FragmentContainerView - NavHost -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"

        android:name="androidx.navigation.fragment.NavHostFragment"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:defaultNavHost="true"

        app:navGraph="@navigation/nav_graph" />
        <!-- navigation.fragment.NavHostFragment = declaramos que este contenedor albergará el
         NavHostFragment que se encargará de mostrar los Fragments y gestionar la pila-->
        <!-- navGraph = vincula con nav_graph.xml -->
        <!-- defaultNavHost = dice al sistema que el NavHostFragment intercepta y maneja el
         botón de retroceso-->

</androidx.constraintlayout.widget.ConstraintLayout>